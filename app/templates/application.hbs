<PanelNamedBlocks @headerColor='lightblue'>
  <:header>
    Alpha header
  </:header>
  <:body>
    Alpha body
  </:body>
</PanelNamedBlocks>
<br />

<Panel>
  <Panel::Header
    @headerColor='hotpink'
    @isOpen={{this.isBetaOpen}}
    @togglePanel={{this.toggleBetaPanel}}
  >
    Beta Header
  </Panel::Header>
  <Panel::Body @isOpen={{this.isBetaOpen}}>
    Beta Body
  </Panel::Body>
</Panel>

{{! <Panel as |panel|>
  <panel.Header @headerColor='hotpink'>
    Beta header
  </panel.Header>
  <panel.Body>
    Beta body
  </panel.Body>
</Panel> }}